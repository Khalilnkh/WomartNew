                                        <label>
                                            Price
                                        </label>
                                    </h3>
                                    <div class="accordion-single-content price-filter">
                                        <ul>
                                            <li><a asp-controller="shop" asp-action="index" asp-route-minPrice="0" asp-route-maxPrice="100">$0.00 - $100.00</a></li>
                                            <li><a asp-controller="shop" asp-action="index" asp-route-minPrice="100" asp-route-maxPrice="300">$100.00 - $200.00</a></li>
                                            <li><a asp-controller="shop" asp-action="index" asp-route-minPrice="200" asp-route-maxPrice="300">$200.00 - $300.00</a></li>
