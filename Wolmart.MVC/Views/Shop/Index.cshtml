                                        <label>
                                            Brand
                                        </label>
                                    </h3>
                                    <div class="accordion-single-content">
                                        <div class="checkboxes">
                                            <div class="checkboxes__row">
                                                <ul>
                                                    @foreach (var item in ViewBag.Brands)
                                                    {
                                                        <li class="checkboxes__item">
                                                            <label data-brand-id="@item.ID" class="checkbox style-c">
                                                                <a asp-controller="shop" asp-action="index" asp-route-brand="@item.ID">
                                                                    <input type="checkbox" />
                                                                    <div class="checkbox__checkmark"></div>
                                                                </a>
                                                                <a asp-controller="shop" asp-action="index" asp-route-brand="@item.ID" class="checkbox__body">@item.Name</a>
                                                            </label>
                                                        </li>
